<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<h2>overall score: <%= @overall_score %><h2>
  <h2>People are <span class="sentiment"><%= @sentiment%></span> about the topic right now</h2>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Sentiment</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.body %></td>
        <td><%= tweet.sentiment %></td>
        <td><%= tweet.score %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Home page', '/homepage' %>
<style>
.sentiment{
  background-color: orange;
}
</style>